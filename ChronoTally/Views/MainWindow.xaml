<Window
    x:Class="ChronoTally.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ChronoTally.ViewModels"
    Title="ChronoTally"
    Width="1150"
    Height="450">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="From:" />
            <TextBox
                Name="StartTimeTextBox"
                Width="100"
                VerticalContentAlignment="Center" />
            <TextBlock
                Margin="10,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="To:" />
            <TextBox
                Name="FinishTimeTextBox"
                Width="100"
                VerticalContentAlignment="Center" />
            <TextBlock
                Margin="10,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Description:" />
            <TextBox
                Name="DescriptionTextBox"
                Width="200"
                VerticalContentAlignment="Center" />
            <Button
                Margin="10,0,0,0"
                Command="{Binding AddEntryCommand}"
                Content="Add Entry" />
        </StackPanel>

        <DataGrid
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="False"
            ItemsSource="{Binding WorkEntries}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Date}" Header="Date" />
                <DataGridTextColumn Binding="{Binding StartTime}" Header="Start Time" />
                <DataGridTextColumn Binding="{Binding FinishTime}" Header="Finish Time" />
                <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                <DataGridTextColumn Binding="{Binding HoursWorked}" Header="Hours Worked" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Margin="5"
                Command="{Binding SaveToExcelCommand}"
                Content="Save to Excel" />
            <Button
                Margin="5"
                Command="{Binding LoadFromExcelCommand}"
                Content="Load from Excel" />
            <Button
                Margin="5"
                Command="{Binding GenerateWeeklyReportCommand}"
                Content="Weekly Report" />
            <Button
                Margin="5"
                Command="{Binding GenerateMonthlyReportCommand}"
                Content="Monthly Report" />
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="{Binding TimeBalance}" />
        </StackPanel>
    </Grid>
</Window>