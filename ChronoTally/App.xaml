<Application
    x:Class="ChronoTally.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ChronoTally.Converters"
    xmlns:local="clr-namespace:ChronoTally"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <converters:PositiveBalanceConverter x:Key="PositiveBalanceConverter" />
            <converters:NegativeBalanceConverter x:Key="NegativeBalanceConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>